<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ssj_recognized.lostandfound.UpdateUserActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200sp"
        android:background="@color/roundbutton">
    </RelativeLayout>


    <RelativeLayout
        android:layout_marginTop="100sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/uploadlayout"
        android:layout_centerHorizontal="true">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="150sp"
            android:layout_height="150sp"


            android:id="@+id/circular"
            android:src="@drawable/user2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20sp"/>
        <ImageView
            android:id="@+id/uploadbtn"
            android:layout_width="35sp"
            android:layout_height="35sp"
            android:layout_marginTop="143sp"

            android:layout_marginLeft="230sp"

            android:src="@drawable/upload"/>
        <ProgressBar
            android:id="@+id/progressBarupload"
            style="?android:attr/progressBarStyle"
            android:layout_width="35sp"
            android:layout_height="35sp"

            android:layout_marginLeft="280sp"
            android:layout_marginTop="143sp"




            android:visibility="invisible" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:textSize="24sp"
        android:textColor="@android:color/black"
        android:id="@+id/name"
        android:gravity="center"
        android:layout_below="@+id/uploadlayout"
        android:layout_marginTop="10sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30sp"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:id="@+id/email"
        android:layout_below="@+id/name"
        android:layout_marginTop="5sp"
        android:textSize="20sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30sp"
        android:textSize="20sp"
        android:layout_below="@+id/email"
        android:layout_marginTop="5sp"
        android:text="See Posts"
        android:gravity="center"
        android:id="@+id/seeposts"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:text="LOGOUT"
        android:background="@drawable/roundbutton"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:id="@+id/logout"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40sp"
        android:textColor="@android:color/white"/>

</RelativeLayout>
